<h1 class="index-header">
  <div class="col-md-12 text-center">
  <label class="label label-default">Groups</label>
</div>
</h1>

<table class="table">  
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User names</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td class="label label-info"><%= group.users.pluck(:name).join(' ') %></td>
          
        <td><%= link_to 'Show', group, class: 'btn btn-xs btn-warning' %> </td>
        <td><%= link_to 'Edit', edit_group_path(group), class: 'btn btn-xs btn-info' %> </td>
        <td><%= link_to 'Destroy', group, method: :delete, class: 'btn btn-xs btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

